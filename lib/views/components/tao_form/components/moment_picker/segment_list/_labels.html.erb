<div class="segment-labels">
  <% component.segments.each do |segment| %>
    <% if component.separator_segment? segment %>
      <div class="separator"><%= segment[:separator] %></div>
    <% else %>
      <% segment_name = segment.is_a?(Hash) ? segment[:name] : segment %>
      <%= link_to 'javascript:;', class: 'segment-label', data: {segment: segment_name} do %>
        <span class="placeholder"><%= component.t segment_name %></span>
        <span class="value"></span>
      <% end %>
    <% end %>
  <% end %>
</div>
