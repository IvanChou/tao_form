<%= content_tag 'tao-select-result', nil, component.html_options do %>
  <%= yield %>
  <div class="selected-text">
    <%= component.options[:placeholder].presence %>
  </div>
  <%= tao_icon :arrow_down %>
  <%= link_to 'javascript:;', tabindex: '-1', class: 'link-clear', title: component.t(:clear_option) do %>
    <%= tao_icon :close %>
  <% end %>
<% end %>
